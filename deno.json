{
  "$schema": "https://raw.esm.sh/gh/denoland/deno@v2.6.4/cli/schemas/config-file.v1.json",
  "name": "@key/bip39-recast",
  "version": "0.6.3",
  "description": "bip39 recast",
  "license": "MIT",
  "imports": {
    "#src/": "./src/",
    "#fixtures/": "./fixtures/",
    "@std/assert":     "jsr:@std/assert@1",
    "@std/encoding": "jsr:@std/encoding@1.0.10",
    "@std/testing":   "jsr:@std/testing@1"
  },
  "tasks": {
    "build": "deno bundle ./pages/*.html --platform=browser --outdir=./dist",
    "build-minify": "deno task build --minify",
    "build-watch": "deno task build --watch",
    "serve": "deno run -N -R=./dist jsr:@std/http@1/file-server ./dist #recast",
    "dev": {
      "dependencies": [ "build-watch", "serve" ]
    },
    "pages": {
      "command": "rsync -a --ignore-existing ./pages/ ./dist/ && ./tools/build.ts",
      "dependencies": [ "build-minify" ]
    },
    "spec": "deno test -N --allow-run -W=./tmp -R=./tmp ./spec"
  },
  "exports": {
    "./bin": "./src/cli/bin.ts",
    ".": "./src/mod.ts"
  },
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "lib": [
      "DOM",
      "ES2023",
      "deno.window"
    ]
  },
  "publish": {
    "include": [
      "deno.json",
      "LICENSE.txt",
      "README.md",
      "./tools",
      "./pages",
      "./spec",
      "./src"
    ],
    "exclude": [
      "./fixtures",
      "./spec/**/__snapshots__/"
    ]
  },
  "lock": false,
  "lint": {
    "include": [ "src/" ],
    "rules": {
      "tags": [ "recommended" ],
      "include": [
        "no-const-assign",
        "no-non-null-assertion",
        "no-non-null-asserted-optional-chain"
      ]
    }
  },
  "fmt": {
    "useTabs": false,
    "indentWidth": 4,
    "lineWidth": 80,
    "semiColons": true,
    "singleQuote": true
  }
}
